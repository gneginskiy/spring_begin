<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="t1000" class="impl.robots.ModelT1000">
        <!--will be injected at the first step-->
        <!--
        <constructor-arg ref="sonyHead"/>
        <constructor-arg ref="sonyHand"/>
        <constructor-arg ref="sonyLeg"/>
        -->
        
        <!--will be injected after constructor args-->
        <property name="head" ref="toshibaHead"/>
        <property name="hand" ref="toshibaHand"/>
        <property name="leg" ref="toshibaLeg"/>
    </bean>

    <bean id="sonyHead" class="impl.parts.sony.SonyHead"/>
    <bean id="sonyHand" class="impl.parts.sony.SonyHand"/>
    <bean id="sonyLeg" class="impl.parts.sony.SonyLeg"/>

    <bean id="toshibaHead" class="impl.parts.toshiba.ToshibaHead"/>
    <bean id="toshibaHand" class="impl.parts.toshiba.ToshibaHand"/>
    <bean id="toshibaLeg" class="impl.parts.toshiba.ToshibaLeg"/>


</beans>